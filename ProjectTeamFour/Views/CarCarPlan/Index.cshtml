@model ProjectTeamFour.ViewModels.CarCarPlanListViewModel

@section topCSS{
    <link href="~/Assets/Css/CarCarPlanPage/carcarplanindex.css" rel="stylesheet" />
}


@section endJS{
    <script src="~/Assets/Javascript/CarCarPlanPage/carcarplanindex.js"></script>
    }

<!-- 種類 -->
<section class="project-categories">
    <div class="container">
        <div class="project-categories-wrap">
            <div class="project-categories-item tech">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/科技設計">
                        <div class="tech-item pic d-flex justify-content-center">
                            <i class="far fa-lightbulb"></i>
                        </div>
                        <div class="tech-item text">
                            <h4>科技設計</h4>
                        </div>
                    </a>
                </div>
            </div>
            <div class="project-categories-item music">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/音樂">
                        <div class="music-item pic d-flex justify-content-center">
                            <i class="fas fa-music"></i>
                        </div>
                        <div class="music-item text">
                            <h4>音樂</h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="project-categories-item art">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/藝術影視">
                        <div class="art-item pic d-flex justify-content-center">
                            <i class="fas fa-palette"></i>
                        </div>
                        <div class="art-item text">
                            <h4>藝術影視</h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="project-categories-item living">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/生活">
                        <div class="living-item pic d-flex justify-content-center">
                            <i class="fas fa-walking"></i>
                        </div>
                        <div class="living-item text">
                            <h4>生活</h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="project-categories-item public">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/公共在地">
                        <div class="public-item pic d-flex justify-content-center">
                            <i class="fas fa-map-pin"></i>
                        </div>
                        <div class="public-item text">
                            <h4>公共在地</h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="project-categories-item game">
                <div class="project-categories-box">
                    <a href="/CarCarPlan/Type/遊戲出版">
                        <div class="game-item pic d-flex justify-content-center">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <div class="game-item text">
                            <h4>遊戲出版</h4>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>



<!--車車商城卡片-->

<section class="indemand-project">
    <div class="container">

        <div class="indemand-project-item title-bar d-flex justify-content-between mt-2 pt-5">
            <div class="title-bar-item title">
                <h2>車車商城</h2>
            </div>
            <div class="title-bar-item carcar-search d-flex">
                <input type="text" class="w-70 text-input" id="text-input" placeholder="商城搜索">
                <button class="w-50 button-input" id="button-input">
                    <i class="fas fa-search">點擊</i>
                </button>
            </div>
        </div>

        <div class="indemand-project-item cardtemplate-section">
            <div class="indemand-project-wrap">
                <div class="row">

                    @foreach (var item in Model.CarCarPlanItems)
                    {

                        @Html.Partial("~/Views/Shared/PartialView/_carcarPlanIndexPartial.cshtml", item);

                    }

                </div>
            </div>
        </div>

    </div>
</section>



