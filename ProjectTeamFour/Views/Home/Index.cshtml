            <div class="row">


                @for (int i = 0; i < 6; i++)
                {
                    @Html.Partial("~/Views/Shared/PartialView/_ProjectCardPartial.cshtml", Model.ProjectItem.ProjectItems[i]);
                }

                @*@foreach (var item in Model.ProjectItem.ProjectItems)
