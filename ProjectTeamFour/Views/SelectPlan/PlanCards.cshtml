@*@model IEnumerable<ProjectTeamFour.Models.SelectPlan>*@

@model List<SelectPlan>

@section topCSS{
    <link href="~/Assets/Css/campaignDetail.css" rel="stylesheet" />
}
@section endJS{
    @*<script src=".js"></script>*@
}


<!-- 選擇方案 -->
<section id="select-perk">
    <div class="min-display-slide">
        <!-- <h4>選擇方案</h4> -->
        <div class="row">
            <div class="col-sm-3 col-md-12">
                <div class="card-deck">
                    @foreach (var planItem in Model)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h3 id="amount">@Html.DisplayFor(modelItem => planItem.PlanPrice)</h3>
                                <div class="img-wrap">
                                    <img class="card-img-top"
                                         src="https://static.flyingv.asia/static/333x/projects/27775/reward/600273a52912d.png"
                                         alt="Card image cap">
                                </div>
                                <h4 class="card-title">
                                    @Html.DisplayFor(modelItem => planItem.PlanDescription)
                                </h4>
                                <p class="card-text">
                                    <div id="perk-info-down" class="wrapper">
                                        <div class="row">
                                            <div class="col-12 col-sm-12 col-md-6">
                                                <h6 class="text-secondary text-normal text-small">贊助人數</h6>
                                                <h4 class="text-large">@Html.DisplayFor(modelItem => planItem.FundedPeople)</h4>
                                            </div>
                                            <div class="col-12 col-sm-12 col-md-6">
                                                <h6 class="text-secondary text-normal text-small">預計寄送時間</h6>
                                                <h4 class="text-large">@Html.DisplayFor(modelItem => planItem.ExpectShipDate)</h4>
                                            </div>

                                            <div class="col-12 col-sm-12">
                                                <h6 class="text-secondary text-normal text-small">寄送地點</h6>
                                                <h4 class="text-large">@Html.DisplayFor(modelItem => planItem.PlaceAllowedShippng)</h4>
                                            </div>
                                        </div>
                                    </div>
                                </p>
                                <button id="donate-btn"><a href="/ShoppingCart/Index">贊助此回饋方案</a></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

