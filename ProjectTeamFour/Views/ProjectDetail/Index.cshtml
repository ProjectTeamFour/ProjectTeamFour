                                <h5>
                                    <span class="label-grey">提案者</span> @Model.ProjectDetailItem.CreatorName
                                </h5>
                                <div class="wrapper">
                                    <div class="item-text">
                                        <h5>
                                            <span class="label-grey">提案者連結</span><i class="bi bi-link-45deg" style="color:black;"><a href="@Model.CreatorInfo.MemberWebsite">點選</a></i>
                                        </h5>
