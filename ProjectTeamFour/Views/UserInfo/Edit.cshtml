@model ProjectTeamFour.ViewModels.MemberViewModel


@section topCSS{
    <link href="~/Assets/Css/Person_insPage/personal.css" rel="stylesheet" />
    <link href="~/Assets/Css/Person_insPage/rwd-personal.css" rel="stylesheet" />
}


<div class="banner">
    <div class="wrap">
        <ul class="nav nav-pills mb-12" id="pills-tab" role="tablist">
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="false">個人資料</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-backings-tab" data-toggle="pill" href="#pills-backings" role="tab" aria-controls="pills-backings" aria-selected="false">贊助紀錄</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-myprojects-tab" data-toggle="pill" href="#pills-myprojects" role="tab" aria-controls="pills-myprojects" aria-selected="false">提案紀錄</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-message-tab" data-toggle="pill" href="#pills-message" role="tab" aria-controls="pills-message" aria-selected="false">聯絡訊息</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-news-tab" data-toggle="pill" href="#pills-news" role="tab" aria-controls="pills-news" aria-selected="false">最新通知</a>
            </li>
            <li class="nav-item-tag active" role="presentation">
                <a class="nav-links" id="pills-edit-tab" data-toggle="pill" href="#pills-edit" role="tab" aria-controls="pills-edit" aria-selected="true">個人資料</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-account-tab" data-toggle="pill" href="#pills-account" role="tab" aria-controls="pills-account" aria-selected="false">帳號管理</a>
            </li>
            <li class="nav-item-tag" role="presentation">
                <a class="nav-links" id="pills-setting-tab" data-toggle="pill" href="#pills-setting" role="tab" aria-controls="pills-setting" aria-selected="false">通知設定</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <section class="person">
                    <div class="wrap-inside">
                        @Html.Partial("~/Views/Shared/MemberCenterPartial/_usersPartial.cshtml")
                    </div>
                </section>

                <section class="about-some">
                    <div class="wrap-inside">
                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <div class="about-case">
                                    <h2>贊助過的專案</h2>
                                    <p>目前還沒有贊助過任何專案</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="tab-pane fade" id="pills-backings" role="tabpanel" aria-labelledby="pills-backings-tab">
                <section class="record">

                    <div class="wrap-inside">
                        @if (Model.Records != null)
                        {
                            foreach (var item in Model.Records)
                            {
                                @Html.Partial("~/Views/Shared/MemberCenterPartial/_backingRecordsPartial.cshtml", item)
                            }
                        }
                        else
                        {
                            Console.WriteLine("13");
                        }
                    </div>

                </section>
            </div>
            <div class="tab-pane fade" id="pills-myprojects" role="tabpanel" aria-labelledby="pills-myprojects-tab">
                <section class="case">

                    <div class="wrap-inside">
                        <div class="case-title">
                            <h2>提案紀錄</h2>
                            <p>您可以在此查閱所有發起過的專案，專案提交後 7 個工作天內將有專人協助您進行下一步。</p>
                            <hr />
                        </div>
                        @if (Model.Records != null)
                        {
                            foreach (var item in Model.MyProjects)
                            {
                                <div>
                                    @Html.Partial("~/Views/Shared/MemberCenterPartial/_myProjectPartial.cshtml", item)
                                </div>
                            }
                        }
                        else
                        {
                            <div>您目前還沒有提案紀錄優!</div>
                        }

                        }

                        <div class="case-doing">
                            <div class="case-doing-funding">
                                <h3>募資中專案</h3>
                                <p>目前您沒有募資中專案</p>
                            </div>
                            <div class="case-doing-creating">
                                <h3>創建中專案</h3>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="tab-pane fade" id="pills-message" role="tabpanel" aria-labelledby="pills-message-tab">
                <div class="message">
                    <div class="wrap-inside">
                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <div class="search-item">
                                    <select class="message-input" name="option">
                                        <option value="1">最新</option>
                                        <option value="2">未讀</option>
                                        <option value="3">已讀</option>
                                    </select>
                                    <i class="fas fa-search"></i>
                                    <input type="search">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-news" role="tabpanel" aria-labelledby="pills-news-tab">
                <div class="news">
                    <div class="wrap-inside">
                        <div class="col-sm-12 col-md-9">
                            <div class="news-text">
                                <span>於2天前</span>
                                <p>歡迎來到 flyingV！您可以到 熱門項目 看看我們的新鮮好案，或是 提案 發起您人生中的第一個群眾募資計劃！</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade show active" id="pills-edit" role="tabpanel" aria-labelledby="pills-edit-tab">
                <div class="edit">
                    <div class="wrap-inside">

                        @Html.Partial("~/Views/Shared/MemberCenterPartial/_editPartial.cshtml")

                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-account" role="tabpanel" aria-labelledby="pills-account-tab">
                <div class="account">
                    <div class="wrap-inside">
                        <form action="">
                            <div id="user-setting" class="container">
                                <div class="form-group row">
                                    <div class="col-12 col-md-6">
                                        <blockquote class="colored-label">
                                            <p>帳號管理</p>
                                        </blockquote>
                                        <div class="login-account form-group">
                                            <label for="account">登入帳號</label>
                                            <input type="text" class="form-control" id="account" placeholder="example@gmail.com" readonly>
                                        </div>
                                        <div class="reset-passward form-group">
                                            <label for="inputPassword">更改密碼</label>
                                            <input type="password" class="form-control" id="inputPassword" placeholder="請輸入舊密碼">
                                        </div>
                                        <button type="submit" class="btn btn-primary">更改密碼</button>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <label for="linked-account" class="colored-label">
                                            社群綁定
                                        </label>
                                    </div>
                                </div>
                                <hr>
                                <button id="delete-account" class=" btn btn-secondary">刪除帳號</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-setting" role="tabpanel" aria-labelledby="pills-setting-tab">
                <div class="setting">
                    <div class="wrap-inside">
                        @Html.Partial("~/Views/Shared/MemberCenterPartial/_notifactionPartial.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section endJs{

    <script src="~/Assets/Javascript/PersonalInfo/PersonInfo.js"></script>
