@*@model CarCarPlanViewModel*@
<div class="col-sm-12 col-md-12 shop-item" v-for="model in Models">
    <div class="cart-item" v-if="model.QuantityLimit>=0">
        <a href="#" class="thumbnail">
            <img v-bind:src="model.PlanImgUrl">
        </a>
        <div class="content">
            <a href="#" class="title">{{model.PlanTitle}}</a>
            <div class="sales">
                <p class="price">{{model.PlanPrice}}</p>
                <p class="stock" >限量：{{model.QuantityLimit}}</p>
            </div>
        </div>
        <div class="actions">
            <input class="qty" type="number" name="updates[]"
                   id="updates_13864137195572"  v-model="watchInput=model.Quantity" min="1" :max="model.QuantityLimit" aria-label="Quantity" step="1" onkeyup="this.value=this.value.replace(/^-[1-9]\d\s*|0$/g,'')" onafterpaste="clipboardData.setData('text',clipboardData.getData('text').replace(/^-[1-9]\d*|0$/g,''))"  required>
            <a class="remove" aria-label="Remove item from cart">
                <span aria-hidden="true">
                    <svg version="1.1" class="svg close" v-on:click="RemoveFromCart(model.PlanId)" xmlns="//www.w3.org  /2000/svg"
                         xmlns:xlink="//www.w3.org  /1999/xlink" x="0px" y="0px" width="45px"
                         height="45px" viewBox="0 0 60 60" enable-background="new 0 0 60 60"
                         xml:space="preserve">
                    <polygon points="38.936,23.561 36.814,21.439 30.562,27.691 24.311,21.439 22.189,23.561 28.441,29.812   22.189,36.064 24.311,38.186 30.562,31.934 36.814,38.186 38.936,36.064 32.684,29.812 ">
                                            </polygon>
                                        </svg>
                    
                </span>
            </a>
        </div>
    </div>

    
</div>

