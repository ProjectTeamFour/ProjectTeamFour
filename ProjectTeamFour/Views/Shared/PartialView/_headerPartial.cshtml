@{
    MemberViewModel vm = Session["member"] == null ? null : (MemberViewModel)Session["Member"];

    int count = 0;

    if (Session["Cart"] != null)
    {
        var myCart = (CartItemListViewModel)Session["Cart"]; //將Session中的購物車記錄還原成集合
        count = myCart.CartItems.Count;
    }

}


@* Header phonemode *@
<section class="phonemode-navbar">
    <div id="dismiss">
        <i class="fas fa-arrow-left"></i>
    </div>

    <nav id="sidebar">
        <div class="sidebar-header">
            <h2>
                @Html.ActionLink("集資車車", "Index", "Home")
            </h2>
            <li class="sidebar-item search">
                <i class="fas fa-search"></i>
            </li>
            <a class="sidebar-item bullhorn" href="#">
                <i class="fas fa-bullhorn"></i>
                <p class="message-count">0</p>    <!-- 通知這裡先放 0 -->
            </a>
        </div>


        <div class="search-input">
            <input type="text" class="phone-input-search" id="phone-searchString">
        </div>

        <ul class="list-unstyled list">
            <li class="active list-item">
                @*htmllink*@
                <a href="/AboutUs/Index">關於</a>
            </li>
            <li class="list-item">
                @*htmllink*@
                <a href="/StartAProject/Index">提案</a>
            </li>
            <li class="list-item">
                @*htmllink*@
                <a href="/Projects/GetAll/id">探索</a>
            </li>
        </ul>
    </nav>

    <div class="overlay"></div>

    <div class="hamburger">
        <button class="sidebar-collapse" id="sidebarCollapse">
            <i class="fas fa-bars"></i>
        </button>

        @*<a class="navbar-brand title" href="#">
                <h1>集資車車</h1>
            </a>*@

        <div class="title">
            <h1>
                <a href="/Home/Index">集資車車</a>
                @*@Html.ActionLink("集資車車", "Index", "Home")*@
            </h1>
        </div>

        <div class="d-flex">

            <a class="nav-item cart" href="/ShoppingCart/ListShoppingCart">
                <i class="fas fa-shopping-cart"></i>
                <p class="MyCart">@count</p>
            </a>

            <li class="nav-item dropdown">

                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @if (vm == null)
                    {
                        @StringFormat5.ShowNoLoginPic()
                    }
                    else
                    {
                        @StringFormat5.ShowLoginPic(vm.ProfileImgUrl, vm.Gender)
                    }

                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                    @if (vm == null)
                    {
                        @StringFormat5.ShowNoLogin()
                    }
                    else
                    {
                        @StringFormat5.ShowMemberMessage(vm)
                    }
                </div>
            </li>
        </div>
    </div>
</section>
